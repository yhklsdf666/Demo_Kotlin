        android:textColor="@android:color/white"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_splash_text1" />

    <TextView
        android:id="@+id/tv_splash_text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kotlin教程"
        android:textColor="@android:color/white"
        android:textSize="21sp"
        tools:layout_editor_absoluteX="154dp"
        tools:layout_editor_absoluteY="395dp"
        android:layout_marginTop="161dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_splash_text2"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="8dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/tv_splash_text4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="By:Fover"
        android:textColor="@android:color/white"
        android:textSize="11sp"
        app:layout_constraintEnd_toEndOf="parent"
